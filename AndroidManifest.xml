<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vandevsam.shareloc.beta"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />
    
    <!-- Allows to receive map -->
    <uses-permission android:name="com.vandevsam.shareloc.beta.permission.MAPS_RECEIVE" />
 
    <!-- Used by the Google Maps Android API V2 to download map tiles from Google Maps servers -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!--  just added this -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
 
    <!-- Allows the Google Maps Android API V2 to cache map tile data in the device's external storage area -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
 
    <!-- Allows the Google Maps Android API V2 to use WiFi or mobile cell data (or both) to determine the device's location -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
 
    <!-- Allows the Google Maps Android API V2 to use the Global Positioning System (GPS)
        to determine the device's location to within a very small area -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
 
    <!-- Allows to contact Google Serves -->
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
 
    <!-- Google Maps Android API V2 requires OpenGL ES version 2 -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" /> 

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
         android:name="com.google.android.gms.version"
         android:value="@integer/google_play_services_version" />
        <!-- Specifies the Android API Key, which is obtained from Google API Console -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/api_value" />   
            
        <activity
            android:name="com.vandevsam.shareloc.beta.AuthenticateActivity"
            android:label="@string/app_name" >
            <intent-filter>               
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>                     
        </activity> 
                  
        <activity
            android:name="com.vandevsam.shareloc.beta.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>                
                
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>                     
        </activity>      
        
        <activity
            android:name="com.vandevsam.shareloc.beta.RegisterActivity"
            android:label="Register" >
                                
        </activity> 
        
        <activity
            android:name="com.vandevsam.shareloc.beta.SearchActivity"
            android:label="Search a Location"
            android:parentActivityName="com.vandevsam.shareloc.beta.MainActivity"> 
            <intent-filter>
               <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
              android:name="android.app.searchable"
              android:resource="@xml/searchable" /> 
              <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vandevsam.shareloc.beta.MainActivity" />   
        </activity>
        
        <activity
            android:name="com.vandevsam.shareloc.beta.SearchGroupsActivity"
            android:label="Find a Group"
            android:parentActivityName="com.vandevsam.shareloc.beta.MainActivity"> 
            <intent-filter>
               <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
              android:name="android.app.searchable"
              android:resource="@xml/searchable" /> 
              <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vandevsam.shareloc.beta.MainActivity" />   
        </activity>
        
        <activity
            android:name="com.vandevsam.shareloc.beta.GroupDetailActivity"
            android:label="Group Details" 
            android:parentActivityName="com.vandevsam.shareloc.beta.SearchGroupsActivity">          
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vandevsam.shareloc.beta.SearchGroupsActivity" />
        </activity>
        
        <activity
            android:name="com.vandevsam.shareloc.beta.MarkerDetailsActivity"
            android:label="Marker Details" 
            android:parentActivityName="com.vandevsam.shareloc.beta.MainActivity">          
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vandevsam.shareloc.beta.MainActivity" />
        </activity>
        
         <activity
            android:name="com.vandevsam.shareloc.beta.MyGroupDetailActivity"
            android:label="My Group Details" 
            android:parentActivityName="com.vandevsam.shareloc.beta.SearchGroupsActivity">          
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vandevsam.shareloc.beta.SearchGroupsActivity" />
        </activity>
        
        <activity
            android:name="com.vandevsam.shareloc.beta.NewLocationActivity"
            android:label="Enter New Location" 
            android:parentActivityName="com.vandevsam.shareloc.beta.MainActivity">          
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vandevsam.shareloc.beta.MainActivity" />
        </activity>
        
         <activity
            android:name="com.vandevsam.shareloc.beta.CreateGroupActivity"
            android:label="Create New Group" 
            android:parentActivityName="com.vandevsam.shareloc.beta.MainActivity">          
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vandevsam.shareloc.beta.MainActivity" />
        </activity>
        
        <activity
            android:name="com.vandevsam.shareloc.beta.ProfileActivity"
            android:label="Profile" 
            android:parentActivityName="com.vandevsam.shareloc.beta.MainActivity">          
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vandevsam.shareloc.beta.MainActivity" />
        </activity>
        
        <activity
            android:name=".SettingsActivity"
            android:label="Settings"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vandevsam.shareloc.beta.MainActivity" />
        </activity>
        
        <activity android:name=".SetGroupPreference"/>
        
       
    </application>

</manifest>
