<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
    
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:hint="Enter Name"       
        android:id="@+id/enterName"/>
    
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/enterName"
        android:hint="Enter Username"       
        android:id="@+id/enterUser" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/enterUser"
        android:id="@+id/enterPass"
        android:hint="Enter Password"
        android:password="true" />
    
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/enterPass"
        android:id="@+id/reenterPass"
        android:hint="Re-enter Password"
        android:password="true" />
    
    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/reenterPass"
        android:id="@+id/subBtn"
        android:text="Submit"
        android:onClick="submitInfo" />
    
    <TextView
        android:id="@+id/textView"
        android:layout_below="@+id/subBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
