<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <CheckBox android:id="@+id/group_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/group_a"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/group_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/group_b"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/group_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/group_c"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/group_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/group_d"
        android:onClick="onCheckboxClicked"/>
</LinearLayout>
